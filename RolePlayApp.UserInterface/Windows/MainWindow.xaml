<Window x:Class="RolePlayApp.UserInterface.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControls="clr-namespace:RolePlayApp.UserInterface.Views"
        mc:Ignorable="d"
        Title="RP app" MinHeight="600" MinWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*" MinHeight="100"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <UserControls:MessageView x:Name="MessageDisplay" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"/>
        <UserControls:MessageComposerView Grid.Row="2"></UserControls:MessageComposerView>
    </Grid>
</Window>
